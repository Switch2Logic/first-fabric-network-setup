namespace org.example.gate

asset Gate identified by gateKey {
  o String gateKey
  o String name
  o String location
  o String description
  o String status
  o String[] GateAccess optional
}

participant Resident identified by email {
  o String email
  o String firstName
  o String lastName
}

abstract transaction GateTransaction {
  --> Gate gate
  --> Resident resident
}

transaction AuthorizeGateAccess extends GateTransaction {
}

transaction RevokeGateAccess extends GateTransaction {
}

transaction OpenGate {
 --> Gate gate
}
transaction CloseGate {
 --> Gate gate
}

event GateOpenEvent {
  o String gateKey
  o String message
}

event GateCloseEvent {
  o String gateKey
  o String message
}

transaction GateOpenSensor {
 --> Gate gate
}

transaction GateClosedSensor {
 --> Gate gate
}